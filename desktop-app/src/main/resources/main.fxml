<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.blackcloud.desktop.elements.Controller">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" onAction="#exitAction" />
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="localPanel" source="panel.fxml" VBox.vgrow="ALWAYS"/>
        <fx:include fx:id="securePanel" source="panel.fxml" VBox.vgrow="ALWAYS"/>
        <fx:include fx:id="cloudPanel" source="panel.fxml" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox spacing="5">
        <Button text="&lt;Import" focusTraversable="false" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#importAction"/>
        <Button text="Export&gt;" focusTraversable="false" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#exportAction"/>
        <Button text="Delete" focusTraversable="false" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#deleteAction"/>
        <Button text="Create folder" focusTraversable="false" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#createFolder" />
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </HBox>


</VBox>
