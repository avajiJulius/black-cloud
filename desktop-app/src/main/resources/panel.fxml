<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.blackcloud.desktop.elements.PanelController">
    <HBox>
        <ComboBox fx:id="discBox" onAction="#selectDiskAction" />
        <TextField fx:id="pathField" HBox.hgrow="ALWAYS" editable="false"/>
        <Button text="Up" onAction="#btnPathUpAction"/>
    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS"/>

    <properties>
        <ctrl><fx:reference source="controller" /></ctrl>
    </properties>
</VBox>
